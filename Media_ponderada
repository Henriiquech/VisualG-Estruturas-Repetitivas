Algoritmo "Media_ponderada"

Var
   N, i : inteiro
   X, Y, Z, media : real

Inicio
      escreva("Quantos casos você vai digitar: ")
      leia(N)
      
      para i de 1 ate N faca
      
         escreval("Digite três números: ")
         leia(X)
         leia(Y)
         leia(Z)
         media <- (X * 2 + Y * 3 + Z * 5) / 10
         escreval("Media = ", media:3:1)
         
      fimpara
         
Fimalgoritmo
